{
	"inbounds": [
		{
			"tag":"trojan-tcp-v1",
			"listen": "127.0.0.1",
			"listen_port":2011,
			"tcp_fast_open": true,
			"sniff": true,
			"sniff_override_destination": true,
			"domain_strategy": "prefer_ipv4",
			"proxy_protocol":true,	
			"type": "trojan",
			"users": [
				{% for u in users %}
    				{"name": "{{ u['uuid'] }}@hiddify.com", "password": "{{ u['uuid'] }}"},
				{% endfor%}
  			],
			"transport": {
				"type": "http",
				"path": "/{{ hconfigs['path_trojan'] }}{{ hconfigs['path_tcp'] }}",
				"idle_timeout": "15s",
				"ping_timeout": "15s"
			},
			{%if hconfigs['mux_enable']%}
			"multiplex": {
                "enabled": true,
                "padding": {{ hconfigs['mux_padding_enable'] }},
                "brutal": {
                    "enabled": {{ hconfigs['mux_brutal_enable'] }},
                    "up_mbps": {{ hconfigs['mux_brutal_up_mbps'] }},
                    "down_mbps": {{ hconfigs['mux_brutal_down_mbps'] }}
                }
            },
			{%endif%}
		}	  
	]
}