{
	"inbounds": [
		{
			"tag": "h2-ss-grpc-proxy",
			"listen": "@@v2ray-grpc-proxy", //Only listen on localhost
			//"listen": "/opt/hiddify-server/xray/run/ssg.sock,666",
			"protocol": "shadowsocks",
			"settings": {
				"clients":[
                    {% for u in users %}
					    {"password": "{{ u['uuid'] }}", "email": "{{ u['uuid'] }}@hiddify.com","method": "Chacha20-IETF-Poly1305"},
                    {% endfor %}
				]
			},
			"streamSettings": {
			  "network": "grpc",
			  "security": "none",
			  "grpcSettings": {
				"serviceName": "/{{ hconfigs['path_ss'] }}{{ hconfigs['path_grpc'] }}", //Change to your own gRPC service name, similar to Path in HTTP/2.
			  }
			},
			"sniffing": {
			  "enabled": true,
			  "destOverride": [
				"http",
				"tls"
			  ]
			}
		  }		  
	  ]
}